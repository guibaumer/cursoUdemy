<%- include('./includes/nav.ejs') %>
<h2>Bem-vindo!</h2>
<p class="apresentation">Veja seus contatos abaixo.</p>
    <section class="container">
        <% if(contatos.length > 0) { %>
        <table>
            <% contatos.forEach(contato => { %>
                <tr>
                    <td><%= contato.nome %></td>
                    <td><%= contato.sobrenome %></td>
                    <td><%= contato.email %></td>
                    <td><a class="editar "href="/editar/editar/<%= contato._id %>">Editar</a></td>
                    <td><a class="excluir" href="/contato/delete/<%= contato._id %>">Excluir</a></td>
                </tr>
            <% }) %>
        </table>
        <% } else { %>
            <p>A lista est√° vazia.</p>
        <% } %>
    </section>

