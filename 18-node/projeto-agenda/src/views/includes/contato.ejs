<%- include('head') %>
<%- include('nav') %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
            <h1 class="text-center">Contato</h1>
            <p class="text-center lead">Crie e edite seus contatos</p>

            <%- include('messages') %>

            <% if(contato._id) { %>
            <form action="/contato/edit/<%= contato._id %>" method="POST">
            <% } else { %>
            <form action="/contato/register" method="POST">
            <% } %>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                <div class="form-group">
                  <label for="exampleInputEmail1">Nome</label>
                  <input value="<%= contato.nome %>" type="text" name="nome" class="form-control" id="exampleInputEmail1">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Sobrenome</label>
                    <input value="<%= contato.sobrenome %>" type="text" name="sobrenome" class="form-control" id="exampleInputEmail1">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Email</label>
                    <input value="<%= contato.email %>" type="email" name="email" class="form-control" id="exampleInputEmail1">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Telefone</label>
                    <input value="<%= contato.telefone %>" type="tel" name="telefone" class="form-control" id="exampleInputEmail1">
                  </div>
               
               
                <button type="submit" class="btn btn-primary mt-3">Salvar</button>
              </form>

        </div>

        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('footer') %>

   